<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.musicappspo.MusicController"
      stylesheets="@styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <children>
        <Label text="Music Search App"/>
        <TextField fx:id="searchField" promptText="Enter artist or song name" prefWidth="300"/>
        <Button text="Search" onAction="#handleSearch"/>
        <HBox spacing="10" alignment="CENTER">
            <VBox spacing="5" alignment="CENTER" HBox.hgrow="ALWAYS">
                <Label text="Best Songs" styleClass="category-label"/>
                <ListView fx:id="songsListView" prefHeight="200" VBox.vgrow="ALWAYS"/>
            </VBox>
            <VBox spacing="5" alignment="CENTER" HBox.hgrow="ALWAYS">
                <Label text="Albums" styleClass="category-label"/>
                <ListView fx:id="albumsListView" prefHeight="200" VBox.vgrow="ALWAYS"/>
            </VBox>
        </HBox>
    </children>
</VBox>

